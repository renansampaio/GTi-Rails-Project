<p id="notice"><%= notice %></p>

<h1>Produtos em Estoque</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Preço</th>
      <th>Tipo</th>
      <th>Peso(kg)</th>
      <th>Estoque</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.nome %></td>
        <td><%= product.preco %></td>
        <td><%= product.tipo %></td>
        <td><%= product.peso %></td>
        <td><%= product.estoque %></td>
        <td><%= link_to 'Exibir', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Deletar', product, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_product_path , class: 'button'%>
