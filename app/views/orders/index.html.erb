<p id="notice"><%= notice %></p>

<h1>Listagem de Comandas</h1>

<table>
  <thead>
    <tr>
      <th>Número</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.número %></td>
        <td><%= order.status_string %></td>
        
        <td><%= link_to 'Mostrar', order %></td>
        <td><%= link_to 'Editar', edit_order_path(order) %></td>
        <td><%= link_to 'Deletar', order, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Gerar Comanda', new_order_path, class: 'button' %>
<%= link_to 'Voltar', root_path, class: 'button' %>
